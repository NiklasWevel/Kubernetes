{
  "extends": ["config:recommended"],
  "labels": ["dependencies"],
  "enabledManagers": [
    "docker-compose",
    "helm-values",
    "helmfile",
    "kustomize",
    "kubernetes"
  ],
  "schedule": [
    "before 8am"
  ],
  "timezone": "Europe/Berlin",
  "commitMessageAction": "update",
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["/.*/"],
      "groupName": null
    }
  ],
  "kubernetes": {
    "managerFilePatterns": ["/\\.yaml$/"]
  }
}
